<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/company_logo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/company_logo"

        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="45dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textPart1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        style="@style/font_base_text"
        android:textColor="@color/black"
        android:textAlignment="center"

        android:text="Мы искренне рады видеть вас в числе наших пользователей. Прежде чем мы начнем, пожалуйста, давайте завершим регистрацию вашего профиля. Это поможет нам предоставлять более подходящие рекомендации."

        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="50dp"

        app:layout_constraintTop_toBottomOf="@+id/company_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textPart2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        style="@style/font_base_text"
        android:textColor="@color/black"
        android:textAlignment="center"

        android:text="Это займет всего пару минут, и вы сможете пользоваться всеми функциями нашего приложения."

        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="50dp"

        app:layout_constraintTop_toBottomOf="@+id/textPart1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/thxText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        style="@style/font_medium_header"
        android:textColor="@color/blue"
        android:textAlignment="center"

        android:text="Спасибо что выбрали нас"

        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="50dp"

        app:layout_constraintBottom_toTopOf="@+id/registrationContinue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/registrationContinue"

        android:layout_width="match_parent"
        android:layout_height="43dp"

        style="@style/font_medium_header"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"

        android:text="Продолжить"

        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="45dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

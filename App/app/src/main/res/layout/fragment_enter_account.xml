<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/UserAgreement"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        style="@style/font_base_text"
        android:textAlignment="center"

        android:text="Продолжая, вы соглашаетесь с положениями основных документов KEDWI, а таже подтверждаете что прочли их."

        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/login_Google"

        android:layout_width="match_parent"
        android:layout_height="43dp"

        style="@style/font_medium_header"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="@color/grey"

        android:text="Войти через Google"

        android:layout_marginBottom="64dp"
        android:layout_marginHorizontal="45dp"

        app:layout_constraintBottom_toTopOf="@+id/UserAgreement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/login_Vk"

        android:layout_width="match_parent"
        android:layout_height="43dp"

        style="@style/font_medium_header"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="@color/grey"

        android:text="Войти через Vk"

        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="45dp"

        app:layout_constraintBottom_toTopOf="@+id/login_Google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/login_Continue"

        android:layout_width="match_parent"
        android:layout_height="43dp"

        style="@style/font_medium_header"
        android:background="@drawable/rounded_btn"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"

        android:text="Продолжить"

        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="45dp"

        app:layout_constraintBottom_toTopOf="@+id/login_Vk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_Text"

        android:layout_width="match_parent"
        android:layout_height="43dp"

        style="@style/font_medium_header"
        android:background="@drawable/rounded_edit_text"

        android:hint="Адрес электронной почты"

        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="45dp"
        android:paddingStart="32dp"

        app:layout_constraintBottom_toTopOf="@+id/login_Continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/company_logo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/welcome_company_logo"

        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="45dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
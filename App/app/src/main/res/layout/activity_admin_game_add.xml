<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/backBtn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/back_arrow"

        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageButton
            android:id="@+id/gameLogo"

            android:layout_width="180dp"
            android:layout_height="270dp"

            android:background="@color/grey"

            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/gameStatus_Btn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Вышла"
            style="@style/font_medium_header"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/grey"
            android:textAlignment="textStart"

            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="45dp"
            android:paddingStart="32dp" />

        <EditText
            android:id="@+id/gameName_Text"

            android:layout_width="match_parent"
            android:layout_height="43dp"

            style="@style/font_medium_header"
            android:background="@drawable/rounded_edit_text"

            android:hint="Название игры"

            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="45dp"
            android:paddingStart="32dp" />

        <Button
            android:id="@+id/gameDate_Btn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            style="@style/font_medium_header"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/grey"
            android:textAlignment="textStart"

            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="45dp"
            android:paddingStart="32dp" />

        <EditText
            android:id="@+id/gameDeveloper_Text"

            android:layout_width="match_parent"
            android:layout_height="43dp"

            style="@style/font_medium_header"
            android:background="@drawable/rounded_edit_text"

            android:hint="Разработчик"

            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="45dp"
            android:paddingStart="32dp" />

        <EditText
            android:id="@+id/gamePublisher_Text"

            android:layout_width="match_parent"
            android:layout_height="43dp"

            style="@style/font_medium_header"
            android:background="@drawable/rounded_edit_text"

            android:hint="Издатель"

            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="45dp"
            android:paddingStart="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="PEGI"
            style="@style/font_medium_header"

            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="45dp"
            android:paddingStart="32dp"/>

        <Button
            android:id="@+id/gamePEGI_Btn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            style="@style/font_medium_header"
            android:background="@drawable/rounded_btn"
            android:backgroundTint="@color/grey"
            android:textAlignment="textStart"

            android:layout_marginHorizontal="45dp"
            android:paddingStart="32dp" />

        <Button
            android:id="@+id/add_Btn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Продолжить"
            style="@style/font_medium_header"
            android:background="@drawable/rounded_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"

            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="45dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--  STYLESHEET FOR FONTS  -->
    <style name="font_header">
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">.05</item>
        <item name="android:fontFamily">@font/roboto_condensed_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="font_large_header">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_condensed_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="font_medium_header">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_condensed_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="font_highlighting_text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="font_base_text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>